<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/taxi"
    tools:context=".DriverRegLoginActivity">

    <EditText
        android:id="@+id/driverEmail"
        android:layout_width="match_parent"
        android:layout_below="@id/statusDriver"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="123@mail.ru"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/driverPassword"
        android:layout_below="@id/driverEmail"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signInDriver"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverPassword"
        android:text="Войти" />

    <Button
        android:id="@+id/signApDriver"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@id/signInDriver"
        android:text="Регистрация" /> />

    <TextView
        android:id="@+id/statusDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Вход для водителей" />

    <TextView
        android:id="@+id/signInQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signInDriver"
        android:layout_marginTop="5dp"
        android:text="Еще нет аккаунта?" />


</RelativeLayout>